@model UserUpdateViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri</h4>
            <br />
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Yazar Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="@Model.namesurname" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    <input type="text" class="form-control" asp-for="@Model.username" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    <input type="email" class="form-control" asp-for="@Model.mail" placeholder="Email">
                </div>
                <div class="form-group">
                   
                    <label for="exampleInputEmail3">Yeni Şifre</label>
                    <input type="text" class="form-control" asp-for="@Model.password" placeholder="Yeni Şifre">
                     <div class="form-check">
                        <input type="checkbox" id="flexCheckChecked" asp-for="@Model.changepassword">
                        <label for="flexCheckChecked">
                            Şifremi Değiştirmek istemiyorum
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Resim Yolu</label>
                    <input type="text" class="form-control" asp-for="@Model.imageurl" placeholder="Resim Yolu">
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button asp-action="index" asp-controller="dashboard" class="btn btn-light">İptal</button>
            </form>

        </div>
    </div>
</div>


