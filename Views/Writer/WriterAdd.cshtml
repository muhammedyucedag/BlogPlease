@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri</h4>
                <br />
                <div class="forms-sample">
                    <div class="form-group " >
                        <input type="hidden" class="form-control" id="exampleInputEmail3" asp-for="WriteId" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Yazar Ad Soyad</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="WriteName" placeholder="Name">
                        @Html.ValidationMessageFor(x=>x.WriteName)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                        <input type="email" class="form-control" id="exampleInputEmail3" asp-for="WriterMail" placeholder="Email">
                        @Html.ValidationMessageFor(x=>x.WriterMail)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        <input type="password" class="form-control" id="exampleInputPassword4"
                               asp-for="WriterPassword" placeholder="Password">
                        @Html.ValidationMessageFor(x=>x.WriterPassword)
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="file" name="WriterImage" />
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        <textarea class="form-control" asp-for="WriteAbout" id="exampleTextarea1" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>
</form>

